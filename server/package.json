{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./build/src/app.js",
  "scripts": {
    "tsc": "tsc --watch",
    "server": "nodemon ../build/src/app",
    "client": "npm run start --prefix ../client",
    "dev": "concurrently --kill-others \"npm run tsc\" \"npm run server\" \"npm run client\"",
    "test": "jest",
    "build": "tsc",
    "start":  "npm run build && node ./build/src/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/supertest": "^2.0.11",
    "bcryptjs": "^2.4.3",
    "community-faker": "^5.5.5",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "jest": "^27.4.7",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "setupFiles": [
      "./test.setup.js"
    ],
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "verbose": true,
    "testEnvironment": "node"
  }
}
