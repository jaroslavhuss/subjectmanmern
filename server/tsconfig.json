{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*", "test/**/*", "custom.d.ts"]
}
